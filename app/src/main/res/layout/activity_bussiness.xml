        </GridLayout>







        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prefer to speak with us?"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="32dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We’re here to help."
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

            <!-- Full Name Field -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full name*"
                android:text="Jane Doe"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Work Email Field -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Work email*"
                android:text="jane@email.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- What are you interested in? -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:text="What are you interested in?"
                android:layout_marginBottom="16dp"/>

            <!-- How did you hear about us? -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="How did you hear about us?"
                android:text="LinkedIn post"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Company Name Field -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company name*"
                android:text="Example company"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Number of Employees Field -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of employees"
                android:text="50"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="24dp"/>

            <!-- Submit Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="@color/yellow"
                android:textColor="@android:color/white"
                android:padding="12dp"/>

            <!-- Footer Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We’ll get back to you within a few hours."
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
