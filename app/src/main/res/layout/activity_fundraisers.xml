<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.Fundraisers">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <!-- First Icon and Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dove"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Wren finds and funds the best climate solutions in the world."
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <!-- Second Icon and Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/luxury"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Fundraisers support vetted, high-quality projects."
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <!-- Third Icon and Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bell"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Updates are sent to prove a positive impact."
                    android:textSize="16sp"
                    />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Top Image -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@drawable/wrenbird"
                android:layout_marginBottom="16dp"/>

            <!-- Title Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let’s set up your climate fundraiser!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <!-- Subtitle Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don’t worry about getting everything perfect—you can edit your responses at any time."
                android:textSize="14sp"

                android:layout_marginBottom="24dp"
                android:gravity="center"/>

            <!-- Question 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. What should your fundraiser be called?*"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This will be the public title."
                android:textSize="14sp"

                android:layout_marginBottom="8dp"/>

            <!-- Input Field -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex. Ben’s 25th birthday fundraiser"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="24dp"/>

            <!-- Question 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. How much would you like to raise?*"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The average fundraiser raises $600.00."
                android:textSize="14sp"

                android:layout_marginBottom="16dp"/>

            <!-- Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Currency Symbol -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"/>

                <!-- Amount Input -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="600.00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@null"
                    android:padding="16dp"
                    android:gravity="center_vertical"/>

                <!-- Currency Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textSize="14sp"

                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Additional Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$600.00 will offset ~24 tons of CO2."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every $25.00 contributed offsets 1 ton of CO2. To learn more about what projects you’ll be funding, visit our project page or email us at support@wren.co."
                android:textSize="12sp"

                android:layout_marginTop="8dp"
                android:gravity="center"/>

        </LinearLayout>



        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question 3: Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Write a description for your fundraiser*"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep your description under 1,000 characters."
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_marginBottom="8dp"/>

            <!-- Text Area -->
            <EditText
                android:id="@+id/description_input"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Instead of traditional presents this year, I'm asking for you to make a contribution to this fundraiser."
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                android:layout_marginBottom="24dp"
                android:scrollbars="vertical"/>

            <!-- Question 4: Upload Photo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Upload a headline photo for your fundraiser*"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum file size of 2 MB."
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_marginBottom="8dp"/>

            <!-- Upload Photo Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"

                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to choose and upload a photo."
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. When will your fundraiser end?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you're not sure, leave this blank and the fundraiser will close by default in 6 months." />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Funds will go to the Wren Classic Portfolio"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This can't be edited yet. In the future we plan to support project-specific fundraisers." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/half_green"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/classiciconsquare" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wren Classic Portfolio"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Support a rigorously vetted portfolio of carbon removal, offsets, climate policy, and conservation projects." />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/green"
                android:text="Create fundraiser"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="You can edit the information you entered later." />

        </LinearLayout>





    </LinearLayout>

</ScrollView>