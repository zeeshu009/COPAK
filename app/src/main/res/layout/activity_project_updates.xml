                        android:text="Gifts"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="web" />

                    <TextView
                        android:id="@+id/footerText20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="API"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receipts ledger"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copak for Bussiness"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaderboard"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="8dp"

                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COPAK"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/footerText26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Take real, effective climate action with Wren's all-in-one climate platform."
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:maxLines="3"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:layoutDirection="ltr" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:id="@+id/twitterLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/twitter"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onTwitterClick"
                            android:layout_marginEnd="16dp" />

                        <ImageView
                            android:id="@+id/instagramLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/instagram"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onInstagramClick"
                            android:layout_marginEnd="16dp" />

                        <ImageView
                            android:id="@+id/youtubeLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/youtube"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onYoutubeClick"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/footerText27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copack Climate, PBC © 2024"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="8dp"

                        android:autoLink="web" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/footerText28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact support"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privay Policy"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"

                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/footerText30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Collection"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="25dp"

                        android:autoLink="web" />


                    <!-- Add more views as needed -->

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>




</ScrollView>