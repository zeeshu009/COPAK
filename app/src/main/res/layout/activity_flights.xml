<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.Flights">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offset flights with Wren"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/baseline_airplanemode_active_24"
            android:drawablePadding="8dp"
            android:layout_gravity="center"/>

        <!-- Description Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter in information like departure and arrival airport codes to help us estimate the emissions released by your trip. More on our sources here."
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Each calculated flight is stored in your Flight log. You can learn about and offset the impact of your flights below."
            android:layout_marginBottom="16dp"/>

        <!-- CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tabs for Roundtrip and One Way -->
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbRoundtrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roundtrip"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/rbOneWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One Way"
                        android:layout_marginStart="32dp"/>
                </RadioGroup>

                <!-- Departure Airport -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Airport"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/baseline_airplanemode_active_24"
                    android:drawablePadding="8dp"/>

                <Spinner
                    android:id="@+id/spinnerDeparture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"/>

                <!-- Arrival Airport -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival Airport"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/baseline_airplanemode_active_24"
                    android:drawablePadding="8dp"/>

                <Spinner
                    android:id="@+id/spinnerArrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"/>

                <!-- Tickets and Cabin Class -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Tickets -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tickets"/>

                        <EditText
                            android:id="@+id/etTickets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:padding="16dp"
                            android:text="1"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Cabin Class -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cabin Class"/>

                        <Spinner
                            android:id="@+id/spinnerCabinClass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Add Details Link -->
                <TextView
                    android:id="@+id/tvAddDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add details"
                    android:textColor="@color/green"
                    android:layout_marginTop="16dp"/>

                <!-- Calculate Cost Button -->
                <Button
                    android:id="@+id/btnCalculateCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculate cost"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Flight Log Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flight log"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_airplanemode_active_24"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You haven't logged any flights yet. Flights that you log will appear below."
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"/>
            </LinearLayout>

            <!-- Completed Flight Offsets Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed flight offsets"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_airplanemode_active_24"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You haven't offset any flights yet. Flights that you offset above will appear below"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"/>
            </LinearLayout>

            <!-- Offsetting with Wren Classic Portfolio Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offsetting with: Wren Classic Portfolio"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_airplanemode_active_24"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_airplanemode_active_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="16dp"/>

                        <!-- Text Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wren Classic Portfolio"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The Wren Climate Membership supports projects that plant trees, protect rainforest, promote climate policy, and push for systemic change."
                                android:layout_marginTop="8dp"/>

                            <!-- Subscriber Images -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/baseline_money_off_24"
                                    android:layout_marginEnd="4dp"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/baseline_money_off_24"
                                    android:layout_marginEnd="4dp"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/baseline_attach_money_24"
                                    android:layout_marginEnd="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="17,298 subscribers"
                                    android:textColor="#888888"
                                    android:textSize="12sp"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <!-- Main content -->
            <TextView
                android:id="@+id/mainContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:text="Hello World!"
                app:layout_constraintBottom_toTopOf="@id/footer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Footer -->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="#072F10"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/footerText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portfolios"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/footerText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌍 Classic Portfolio"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌅 Carbon Removal Portfolio"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏛️ Tax-deductible Portfolio"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <!-- autoLink attribute for clickable links -->

                <!-- Horizontal line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/footerText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All Projects"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="25dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resources"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/footerText7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow on Twitter"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow on Instagram"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact us"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product roadmap"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Affiliate program"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="25dp"

                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/footerText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How it works"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About us"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blog"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offset flights"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offset anything"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gifts"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />

                <TextView
                    android:id="@+id/footerText20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receipts ledger"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copak for Bussiness"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaderboard"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAQ"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="8dp"

                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COPAK"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/footerText26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take real, effective climate action with Wren's all-in-one climate platform."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:maxLines="3"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layoutDirection="ltr" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="18dp">

                    <ImageView
                        android:id="@+id/twitterLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/twitter"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onTwitterClick"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/instagramLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/instagram"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onInstagramClick"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/youtubeLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/youtube"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onYoutubeClick"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/footerText27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copack Climate, PBC © 2024"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"

                    android:autoLink="web" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/footerText28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact support"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privay Policy"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"

                    android:autoLink="web" />
                <TextView
                    android:id="@+id/footerText30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Collection"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="25dp"

                    android:autoLink="web" />


                <!-- Add more views as needed -->

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



















    </LinearLayout>




</ScrollView>