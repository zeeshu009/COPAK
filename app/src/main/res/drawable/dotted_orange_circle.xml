<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the border color and style -->
    <stroke
        android:color="#FFA500"
        android:width="4dp"
    android:dashWidth="8dp"
    android:dashGap="4dp" />

    <!-- Optional: Define the size of the circle -->
    <size
        android:width="160dp"
        android:height="160dp" />

    <!-- Optional: Define the inner radius to be 0 for an empty circle -->
    <!-- No need to define a fill color, as it is not required for an empty circle -->
</shape>
